<%- include('partials/footer.ejs') %>

<script> 

    $(document).ready(function () {

		init();
		setInterval(init, 2000);
		
		function init(){
			$.ajax({
				url: "/refreshTournamentList", 
				method: "GET",
				data: {},
				success: (data) => {
					console.log(data.status);
					if(data.status === 'in lobby'){
						createTable("leave", data.tournID);
					}
					else{
						createTable("join", null);
					}				
				}
			});
		}
        

        function createTable(button, tournID) {

            $.ajax({
                url: "/getTournamentList", 
                method: "POST",
                data: {button: button },
                success: (data) => {
                    //console.log(data);
                    $('#tourTable').html(data.data);
					if(button === 'leave'){
						// $("button#"+tournID).css("display", "none");
						// alert();
						
						$("#tourTable tr").each(function () {

							$('td', this).each(function () {
								var value = $(this).find("button").attr("id");

								if (value !== tournID) {
									$("button#"+value).css("display", "none");
								}
							})

						})
					}	
                }
            });

        }


		//ajax for joining tournament.
        $(document).on('click', '.btn-join', function() {
			

			if($(this).html() == 'join'){
				var tournID = this.id;

				$.ajax({
					url: "/joinTournament", 
					method: "POST",
					data: {tournID: tournID},
					success: (data) => {

						createTable("leave", tournID);


					}
				});

			}
			else if($(this).html() == 'leave'){

				var tournID = this.id;

				$.ajax({
					url: "/leaveTournament", 
					method: "POST",
					data: {tournID: tournID},
					success: (data) => {

						createTable("join", tournID);


					}
				});
			}
		
		});

		//ajax for deleting a tournament.
        $(document).on('click', '.btn-delete', function() {

			var tournID = this.id;

			$.ajax({
				url: "/deleteTournament", 
				method: "POST",
				data: {tournID: tournID},
				success: (data) => {
					init();
				}
			});
		
		});







	});
</script>

    

  


