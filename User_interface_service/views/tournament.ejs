<div id="editStatus"></div>
<div class="tablePos">
    <table class="admtable table">
		<thead>
			<tr>
			<th scope="col">#</th>
			<th scope="col">Name</th>
			<th scope="col">Created by</th>
			<th scope="col">Joined Players</th>
			<th scope="col">Status</th>
